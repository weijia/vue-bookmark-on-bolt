{
  "manifest_version": 3,
  "name": "Vue Bookmark on Bolt",
  "version": "1.0.0",
  "description": "A Vue.js based Edge extension",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "index.html",
  "permissions": [
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "https://miya.teracloud.jp/*",
    "https://*/*",
    "http://*/*"
  ],
  "web_accessible_resources": [{
    "resources": ["*"],
    "matches": ["<all_urls>"]
  }],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://miya.teracloud.jp/ https://* http://*;"
  }
}